 *
 * @author      Joe Stump <joe@joestump.net>
 * @package     Framework
 * @subpackage  Module
 */
class Framework_Module_Login extends Framework_Auth_ACL
{
    /**
     * __default
     *
     * @access      public
     * @return      mixed
     */
    public function __default()
    {
        $form = $this->createLoginForm();
        $this->setData('QF_Form', $form->toHtml());
    }

    public function loginNow()
    {
        if(!empty($_POST['username']) && !empty($_POST['password'])) {
            if($_POST['username'] == Framework::$site->config->loginUser &&
                $_POST['password'] == Framework::$site->config->loginPass) {

                $this->session->username = $_POST['username'];
                $this->session->password = $_POST['password'];
                header("Location: ./index.php?module=Welcome");
            } else {
                header("Location: ./index.php?module=Login");
            }
        } else {
                header("Location: ./index.php?module=Login");
        }
    }

    private function createLoginForm()
    {
        $form = new HTML_QuickForm('formLogin', 'post', $_SERVER['REQUEST_URI'] . '&event=loginNow');

        $form->addElement('header', 'MyHeader', 'Login');
        $form->addElement('text', 'username', 'Username');
        $form->addElement('password', 'password', 'Password');
        $form->addElement('submit', 'submit', 'Login');

        $form->addRule('username', 'Please enter your user name', 'required', null, 'client');
        $form->addRule('password', 'Please enter your password', 'required', null, 'client');
        $form->applyFilter('__ALL__', 'trim');

        if ($form->validate()) {
            // $form->freeze();
            // $data = $form->exportValues();
            // $user = self::getUser($data['username']);
        }
        return $form;
    }
}

